<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/mainFragment">
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.luckye.controller.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_page2Fragment"
            app:destination="@id/page2Fragment" />
    </fragment>
    <fragment
        android:id="@+id/page2Fragment"
        android:name="com.example.luckye.controller.PageTwoFragment"
        android:label="fragment_page2"
        tools:layout="@layout/fragment_page_two" >
        <action
            android:id="@+id/action_page2Fragment_to_pageThreeFragment"
            app:destination="@id/pageThreeFragment" />
    </fragment>
    <fragment
        android:id="@+id/pageThreeFragment"
        android:name="com.example.luckye.controller.PageThreeFragment"
        android:label="fragment_page_three"
        tools:layout="@layout/fragment_page_three" />
</navigation>